<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.myapplication.ViewingActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="183dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="183dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/day_quality"
        android:layout_width="187dp"
        android:layout_height="73dp"
        android:layout_marginTop="50dp"
        android:text="On a Very Bad day"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        tools:text="On a Very Bad day"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/first_percentage"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:layout_marginTop="107dp"
        android:text="30% Somewhat Stressed"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="30% Somewhat Stressed"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/second_percentage"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:layout_marginTop="193dp"
        android:text="10% Very Stressed"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="10% Very Stressed"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/third_percentage"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="60% Very Stressed"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="60% Very Stressed"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
